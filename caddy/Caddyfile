# domain name.

looptask.uk {
        # Set this path to your site's directory.
        #root * /usr/share/caddy

        # Enable the static file server.
        #file_server

        handle_path /api/mobile/* {
                reverse_proxy db:8000
        }

}

www.looptask.uk {
          root * /usr/share/caddy

          file_server
}
